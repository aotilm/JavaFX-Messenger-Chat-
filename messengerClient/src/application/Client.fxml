<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ClientController">
   <center>
      <StackPane prefHeight="550.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane prefHeight="150.0">
               <children>
                  <BorderPane fx:id="chatPane" prefHeight="200.0">
                     <left>
                        <BorderPane prefHeight="700.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                           <center>
                              <ScrollPane hbarPolicy="NEVER" prefHeight="700.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                                 <content>
                                    <VBox fx:id="vbox" prefWidth="300.0" />
                                 </content>
                              </ScrollPane>
                           </center>
                           <bottom>
                              <Button mnemonicParsing="false" text="Оновити" BorderPane.alignment="CENTER" />
                           </bottom>
                        </BorderPane>
                     </left>
                     <center>
                        <BorderPane prefHeight="700.0" BorderPane.alignment="CENTER">
                           <bottom>
                              <AnchorPane prefHeight="39.0" prefWidth="600.0" style="-fx-background-color: #AAA;" BorderPane.alignment="CENTER">
                                 <children>
                                    <TextField fx:id="textMessage" layoutX="14.0" layoutY="7.0" prefHeight="24.0" prefWidth="485.0" />
                                    <Button fx:id="btnSend" layoutX="505.0" layoutY="7.0" mnemonicParsing="false" onAction="#sendUsersMessage" prefHeight="24.0" prefWidth="90.0" text="Надіслати" />
                                 </children>
                              </AnchorPane>
                           </bottom>
                           <top>
                              <Button fx:id="addButton" mnemonicParsing="false" text="додати користувача" BorderPane.alignment="CENTER" />
                           </top>
                           <center>
                              <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
                                 <content>
                                    <VBox fx:id="messagePane">
                                       <children>
                                          <Label prefHeight="40.0" prefWidth="600.0" text="                                                     Вітаємо у чаті!" textAlignment="RIGHT">
                                             <font>
                                                <Font name="Liberation Serif Bold" size="18.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                 </content>
                              </ScrollPane>
                           </center>
                        </BorderPane>
                     </center>
                  </BorderPane>
                  <AnchorPane fx:id="singInPane" style="-fx-background-color: white;">
                     <children>
                        <TextField fx:id="textName" layoutX="366.0" layoutY="258.0" promptText="Наприклад: &quot;Андрій&quot;" />
                        <Label layoutX="387.0" layoutY="229.0" text="Введіть ваше ім'я">
                           <font>
                              <Font name="Liberation Serif Bold" size="15.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnGoChat" layoutX="389.0" layoutY="294.0" mnemonicParsing="false" onAction="#userAuthentication" text="Увійти до чату">
                           <font>
                              <Font name="Liberation Serif Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </children>
            </StackPane>
         </children>
      </StackPane>
   </center>
</BorderPane>
