<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ClientController">
   <center>
      <StackPane prefHeight="550.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane prefHeight="150.0">
               <children>
                  <AnchorPane fx:id="singInPane" style="-fx-background-color: white;">
                     <children>
                        <TextField fx:id="textName" layoutX="366.0" layoutY="258.0" promptText="Наприклад: &quot;Андрій&quot;" />
                        <Label layoutX="387.0" layoutY="229.0" text="Введіть ваше ім'я">
                           <font>
                              <Font name="Liberation Serif Bold" size="15.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnGoChat" layoutX="389.0" layoutY="294.0" mnemonicParsing="false" onAction="#userAuthentication" text="Увійти до чату">
                           <font>
                              <Font name="Liberation Serif Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
                  <BorderPane fx:id="chatPane" prefHeight="200.0">
                     <left>
                        <BorderPane prefHeight="700.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                           <center>
                              <ScrollPane fx:id="usersListPane" hbarPolicy="NEVER" prefHeight="700.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                                 <content>
                                    <VBox fx:id="vbox" prefWidth="300.0" />
                                 </content>
                              </ScrollPane>
                           </center>
                           <bottom>
                              <Button fx:id="updateChats" mnemonicParsing="false" onAction="#addUser" text="Оновити" BorderPane.alignment="CENTER">
                                 <font>
                                    <Font name="Liberation Serif" size="14.0" />
                                 </font></Button>
                           </bottom>
                        </BorderPane>
                     </left>
                     <center>
                        <BorderPane prefHeight="700.0" BorderPane.alignment="CENTER">
                           <top>
                              <Button fx:id="addButton" mnemonicParsing="false" onAction="#checkOnlineUsers" text="додати користувача" BorderPane.alignment="CENTER" />
                           </top>
                           <center>
                              <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <BorderPane prefHeight="200.0" prefWidth="200.0">
                                       <bottom>
                                          <AnchorPane prefHeight="39.0" prefWidth="600.0" style="-fx-background-color: #AAA;" BorderPane.alignment="CENTER">
                                             <children>
                                                <TextField fx:id="textMessage" layoutX="14.0" layoutY="7.0" prefHeight="24.0" prefWidth="485.0" />
                                                <Button fx:id="btnSend" layoutX="505.0" layoutY="7.0" mnemonicParsing="false" onAction="#sendUsersMessage" prefHeight="24.0" prefWidth="90.0" text="Надіслати">
                                                   <font>
                                                      <Font name="Liberation Serif Bold" size="13.0" />
                                                   </font>
                                                </Button>
                                             </children>
                                          </AnchorPane>
                                       </bottom>
                                       <center>
                                          <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
                                             <content>
                                                <VBox fx:id="messagePane">
                                                   <children>
                                                      <Label prefHeight="40.0" prefWidth="600.0" text="                                                     Вітаємо у чаті!" textAlignment="RIGHT">
                                                         <font>
                                                            <Font name="Liberation Serif Bold" size="18.0" />
                                                         </font>
                                                      </Label>
                                                   </children>
                                                </VBox>
                                             </content>
                                          </ScrollPane>
                                       </center>
                                    </BorderPane>
                                    <AnchorPane fx:id="chooseChatPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;">
                                       <children>
                                          <Label layoutX="233.0" layoutY="230.0" text="Виберіть чат">
                                             <font>
                                                <Font name="Liberation Serif Bold" size="23.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </AnchorPane>
                                 </children>
                              </StackPane>
                           </center>
                        </BorderPane>
                     </center>
                  </BorderPane>
               </children>
            </StackPane>
         </children>
      </StackPane>
   </center>
</BorderPane>
